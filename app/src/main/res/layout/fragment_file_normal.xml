<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.file.NormalOperateFragment">

    <Button
        android:id="@+id/btn_movelog"
        style="@style/BlueButton"
        android:layout_marginTop="20dp"
        android:text="@string/file_copylog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TipText"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:text="@string/file_movelog_notify"
        app:drawableStartCompat="@drawable/ic_tip"
        app:layout_constraintStart_toStartOf="@id/btn_movelog"
        app:layout_constraintTop_toBottomOf="@id/btn_movelog" />

</androidx.constraintlayout.widget.ConstraintLayout>